---
import Layout from '../layout/Layout.astro';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Cristiano Pinto',
  url: 'https://cristianopinto.com',
  description: 'Backend developer portfolio. Projects in Python, Java, C++, ML, game dev, and systems.',
  alumniOf: { '@type': 'College', name: 'Stevens Institute of Technology' },
  sameAs: [
    'https://www.linkedin.com/in/cristiano-m-pinto/',
    'https://github.com/crowmoed'
  ]
};
---

<Layout backgroundScene={true} jsonLd={jsonLd}>
  
  <div class="main-wrapper customback home-page">
    <header class="grid-item name-section">
      <div class="profile-image">
        <img 
          src="/cristianopinto.png" 
          class="profile-pic"
          alt="Cristiano Pinto"
        />
      </div>

      <h1 class="fade-in">Cristiano Pinto</h1>

      <p class="subtitle widget-fade">
        Computer Science · Stevens Institute of Technology
      </p>

      <p class="tagline widget-fade">
        Focused on systems, backend, and data.
      </p>

      <p class="opportunities widget-fade">
        Open to internships and research opportunities.
      </p>

      <div class="capabilities widget-fade" aria-label="Focus areas">
        <span>Systems</span>
        <span>Backend</span>
        <span>Data</span>
      </div>
    </header>

    <section class="grid-item bio-section widget-fade">
      <p>
        I'm a comp sci student built on the fundamentals of <strong>systems engineering</strong>. 
      </p>
      <br>
      <p>
        I love creating projects that challenge and teach me—from hurricane prediction and game engines to backend and data tooling.
      </p>
    </section>
    
    <nav class="grid-item nav-section widget-fade">
      <ul class="link-list">
        <li>
          <a href="/projects" class="nav-link main-link projects-link">
            <span class="link-text">Projects</span>
            <span class="arrow">→</span>
          </a>
        </li>

        <li>
          <a href="mailto:thecristiano.pinto@gmail.com" class="nav-link main-link">
            <span class="link-text">Contact</span>
            <span class="arrow">→</span>
          </a>
        </li>

        <li class="social-row">
          <a href="/Cristiano_pinto_resume.pdf" target="_blank" rel="noopener noreferrer" class="social-link">
            <span>Resume</span>
            <span class="arrow-small">↓</span>
          </a>

          <a href="https://www.linkedin.com/in/cristiano-m-pinto/" target="_blank" rel="noopener noreferrer" class="social-link">
            <span>LinkedIn</span>
            <span class="arrow-small">↗</span>
          </a>

          <a href="https://github.com/crowmoed" target="_blank" rel="noopener noreferrer" class="social-link">
            <span>GitHub</span>
            <span class="arrow-small">↗</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</Layout>

