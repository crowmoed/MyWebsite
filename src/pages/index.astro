---
import Layout from '../layout/Layout.astro';
---

<Layout>
  
  <div class="main-wrapper customback">
  <header class="grid-item name-section">
    <div class="profile-image">
      <img 
        src="/cristianopinto.png" 
        class="profile-pic"
        alt="Cristiano Pinto"
      />
    </div>

    <h1 class="fade-in">Cristiano Pinto</h1>

    <p class="subtitle fade-in-delay">
      Computer Science Student at Stevens Institute of Technology
    </p>

    <p class="tagline fade-in-delay">
      I build reliable systems across stacks.
    </p>
  </header>

  <section class="grid-item bio-section">
    <p>
      A developer driven by restless <strong>curiosity</strong>, I move fluidly between 
      <strong>backend infrastructure</strong> and <strong>application design</strong>.
      <br><br>
      Guided by the question <strong><em>"What can I create?"</em></strong>, I use code to explore diverse 
      domains and build reliable software, regardless of the tech stack.
    </p>
  </section>
  
  <nav class="grid-item nav-section">
    <ul class="link-list">
      
      <li>
        <a href="/projects" class="nav-link main-link projects-link">
          <span class="link-text">Projects</span>
          <span class="arrow">→</span>
        </a>
      </li>

      <li>
        <a href="mailto:thecristiano.pinto@gmail.com" class="nav-link main-link">
          <span class="link-text">Contact</span>
          <span class="arrow">→</span>
        </a>
      </li>

      <li class="social-row">
        <a href="/Cristiano_pinto_resume.pdf" target="_blank" rel="noopener noreferrer" class="social-link">
          <span>Resume</span>
          <span class="arrow-small">↓</span>
        </a>

        <a href="https://www.linkedin.com/in/cristiano-m-pinto/" target="_blank" rel="noopener noreferrer" class="social-link">
          <span>LinkedIn</span>
          <span class="arrow-small">↗</span>
        </a>

        <a href="https://github.com/crowmoed" target="_blank" rel="noopener noreferrer" class="social-link">
          <span>GitHub</span>
          <span class="arrow-small">↗</span>
        </a>
      </li>
    </ul>
  </nav>
  </div>
</Layout>

