---
// src/pages/projects.astro
import Layout from '../layout/Layout.astro';

// Define the GitHub Icon here once to keep the code clean
const githubIcon = `
<svg viewBox="0 0 24 24" width="22" height="22" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.05-.015-2.07-3.345.72-4.05-1.605-4.05-1.605-.54-1.38-1.335-1.755-1.335-1.755-1.095-.75.09-.735.09-.735 1.215.09 1.845 1.245 1.845 1.245 1.08 1.845 2.835 1.305 3.525.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.225 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405 1.02 0 2.04.135 3 .405 2.295-1.545 3.3-1.23 3.3-1.23.66 1.695.24 2.925.12 3.225.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.285 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
</svg>`;
---

<Layout>
  <div class="projects-wrapper">
    
    <header class="projects-header">
      <a href="/" class="back-link">
        <span class="arrow">←</span> Back
      </a>
      <h1 class="fade-in">Selected Works</h1>
    </header>

    <div class="projects-grid fade-in-delay">

      <article class="project-card">
        <div class="card-content">
          <h3>HurricAIne</h3>
          <p>Deep learning system for predicting 6-hour hurricane displacement vectors using gridded ERA5 atmospheric reanalysis data and CNN-based regression.</p>
          
          <div class="tech-stack">
            <span>Python</span>
            <span>TensorFlow</span>
            <span>CNN</span>
            <span>ERA5</span>
          </div>
        </div>
        
        <div class="card-links">
          <a href="/projects/hurricaine" class="read-more">Read More <span class="arrow-icon">→</span></a>
          <a href="https://github.com/yourusername/hurricaine" target="_blank" class="github-icon" aria-label="GitHub" set:html={githubIcon} />
        </div>
      </article>

      <article class="project-card">
        <div class="card-content">
          <h3>Myth & Metal</h3>
          <p>Minecraft Forge mod featuring procedural dungeon generation, custom boss fights, tiered item rarity system with custom glint rendering.</p>
          
          <div class="tech-stack">
            <span>Java</span>
            <span>Minecraft Forge</span>
            <span>Mixins</span>
          </div>
        </div>
        
        <div class="card-links">
          <a href="/projects/myth-and-metal" class="read-more">Read More <span class="arrow-icon">→</span></a>
          <a href="https://github.com/yourusername/myth-metal" target="_blank" class="github-icon" aria-label="GitHub" set:html={githubIcon} />
        </div>
      </article>

      <article class="project-card">
        <div class="card-content">
          <h3>Pilly</h3>
          <p>Hardware-accelerated 2D game engine built on SDL3 with Euler-integrated physics, AABB collision detection, and sprite-based rendering pipeline.</p>
          
          <div class="tech-stack">
            <span>C++</span>
            <span>SDL3</span>
            <span>CMake</span>
          </div>
        </div>
        
        <div class="card-links">
          <a href="/projects/pilly" class="read-more">Read More <span class="arrow-icon">→</span></a>
          <a href="https://github.com/yourusername/pilly" target="_blank" class="github-icon" aria-label="GitHub" set:html={githubIcon} />
        </div>
      </article>

      <article class="project-card">
        <div class="card-content">
          <h3>Web Scraper</h3>
          <p>Dual-target fanfiction scraping system with two-stage content filtering: keyword matching followed by local LLM classification via Ollama.</p>
          
          <div class="tech-stack">
            <span>Python</span>
            <span>SeleniumBase</span>
            <span>Ollama</span>
          </div>
        </div>
        
        <div class="card-links">
          <a href="/projects/web-scraper" class="read-more">Read More <span class="arrow-icon">→</span></a>
          <a href="https://github.com/yourusername/scraper" target="_blank" class="github-icon" aria-label="GitHub" set:html={githubIcon} />
        </div>
      </article>

      <article class="project-card">
        <div class="card-content">
          <h3>Calendar Notes</h3>
          <p>Month-view calendar application with per-day note-taking functionality, flat-file persistence, and grid-based navigation.</p>
          
          <div class="tech-stack">
            <span>Python</span>
            <span>CustomTkinter</span>
            <span>File I/O</span>
          </div>
        </div>
        
        <div class="card-links">
          <a href="/projects/calendar-app" class="read-more">Read More <span class="arrow-icon">→</span></a>
          <a href="https://github.com/yourusername/calendar" target="_blank" class="github-icon" aria-label="GitHub" set:html={githubIcon} />
        </div>
      </article>

    </div>
  </div>
</Layout>

<style>
/* --- CARD LINKS --- */
.card-links {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: 25px;
}

/* "Read More" -> Rounded Square */
.read-more {
  display: flex;
  align-items: center;
  gap: 10px;
  
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  padding: 10px 16px;
  
  font-family: var(--font-mono);
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--text-muted);
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  
  transition: all 0.3s ease;
}

.read-more:hover {
  border-color: var(--text-main);
  color: var(--text-main);
  background: rgba(255, 255, 255, 0.05);
}

/* GitHub -> Circle */
.github-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  
  width: 38px;
  height: 38px;
  
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  
  color: var(--text-muted);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.github-icon:hover {
  border-color: var(--text-main);
  color: #fff;
  background: rgba(255, 255, 255, 0.05);
  transform: rotate(10deg);
}
</style>