---
import Layout from '../layout/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const title = 'Projects – Cristiano Pinto';
const description = 'Selected works: HurricAIne, Myth & Metal, Pilly, Web Scraper, Calendar Notes. ML, game engines, Minecraft mods, and more.';
---

<Layout title={title} description={description} backgroundScene={true}>
  <div class="projects-wrapper back projects-page">
    
    <header class="projects-header">
      <a href="/" class="back-link widget-fade">
        <span class="arrow">←</span> Back to Home
      </a>
      <h1 class="widget-fade">Selected Works</h1>
      <p class="intro widget-fade">Projects across machine learning, systems, and full-stack development.</p>
    </header>

    <hr class="divider-frost widget-fade" />

    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card-reveal">
          <ProjectCard project={project} />
        </div>
      ))}
    </div>
  </div>
</Layout>
