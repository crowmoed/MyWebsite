---
import Layout from '../layout/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const title = 'Projects – Cristiano Pinto';
const description = 'Selected works: HurricAIne, Myth & Metal, Pilly, Web Scraper, Calendar Notes. ML, game engines, Minecraft mods, and more.';
---

<Layout title={title} description={description}>
  <div class="projects-wrapper back">
    
    <header class="projects-header">
      <a href="/" class="back-link">
        <span class="arrow">←</span> Back to Home
      </a>
      <h1 class="fade-in">Selected Works</h1>
      <p class="intro fade-in-delay">Projects across machine learning, systems, and full-stack development.</p>
    </header>

    <div class="projects-grid fade-in-delay">
      {projects.map((project) => (
        <ProjectCard project={project} />
      ))}
    </div>
  </div>
</Layout>
