---
import '../style.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cristiano Pinto - Backend Developer</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet">
    
    <style is:global>
  .transition-fade {
    transition: opacity 0.4s ease-in-out, backdrop-filter 0.4s ease-in-out;
    
    opacity: 1;
    backdrop-filter: blur(10px); 
    -webkit-backdrop-filter: blur(10px); 
  }
  
  html.is-animating .transition-fade {
    opacity: 0;
    
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
  }
</style>
  </head>
  
  <body>
    <canvas id="bg" style="position: fixed; top: 0; left: 0; z-index: -99;"></canvas>
    <script src="../main.js"></script>

    <main id="swup" class="transition-fade">
      <div class="grid-container ">
      <slot/>
      </div>
    </main>

    <script>
      import Swup from 'swup';
      const swup = new Swup({
      animationSelector: '[class*="transition-fade"]' 
    });
    </script>

  </body>
</html>

